<div class="container py-5 d-flex flex-column align-items-center justify-content-center" style="min-height:60vh;">
  <div class="bg-white rounded shadow p-4" style="max-width:400px;width:100%;">
    <h1 class="h4 fw-bold mb-4 text-success">Вход</h1>
    <% if (error || query.error) { %>
      <!-- alert удалён, toast показывается через layout.ejs -->
    <% } %>
    <form method="post">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" required class="form-control form-control-lg">
      </div>
      <div class="mb-4">
        <label class="form-label">Пароль</label>
        <input type="password" name="password" required class="form-control form-control-lg">
      </div>
      <button type="submit" class="btn btn-success btn-lg w-100">Войти</button>
    </form>
    <div class="mt-3 text-center text-muted">Нет аккаунта? <a href="/register" class="text-success text-decoration-underline">Зарегистрироваться</a></div>
  </div>
</div> 